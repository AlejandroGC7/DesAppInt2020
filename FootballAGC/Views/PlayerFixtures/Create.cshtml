@model FootballAGC.Models.PlayerFixture

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PlayerFixture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
