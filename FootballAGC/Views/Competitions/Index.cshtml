@model IEnumerable<FootballAGC.Models.Competition>

@{
    ViewData["Title"] = "Index";
}

<h1>Competitions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by competition name: <input type="text" name="SearchString" />
            <input type="submit" value="Search" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionName)
            </th>
            <th>Fixtures</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionName)
            </td>
            <td>
                @{
                    foreach(var f in item.Fixtures){
                        @f.FixtureID @: @f.FixtureDescription <br />
                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CompetitionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CompetitionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CompetitionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
