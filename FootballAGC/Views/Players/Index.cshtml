@model IEnumerable<FootballAGC.Models.Player>

@{
    ViewData["Title"] = "Index";
}

<h1>Players</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" />
            <input type="submit" value="Search" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerSquadNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerBirthdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerNationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerPositionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Selection)
            </th>
            <th>Competitions Played</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerSquadNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerBirthdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerNationality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerPosition.PositionDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Selection.SelectionName)
            </td>
            <td>
                @{
                    foreach(var pf in item.PlayerFixtures){
                        @pf.Fixture.Competition.CompetitionID @: @pf.Fixture.Competition.CompetitionName <br />
                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlayerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlayerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlayerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
