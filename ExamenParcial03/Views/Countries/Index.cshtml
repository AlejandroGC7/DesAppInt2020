@model IEnumerable<HumanResourcesAGC.Models.Country>

@{
    ViewData["Title"] = "Index";
}

<h1>Countries</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by country name: <input type="text" name="SearchString" />
            <input type="submit" value="Search" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th>Locations</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CountryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region.RegionName)
            </td>
            <td>
                @{
                    foreach(var l in item.Locations){
                        @l.LocationID @: @l.City, @l.StateProvince <br />
                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CountryID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CountryID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CountryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
