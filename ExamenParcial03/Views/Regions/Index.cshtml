@model IEnumerable<HumanResourcesAGC.Models.Region>

@{
    ViewData["Title"] = "Index";
}

<h1>Regions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionName)
            </th>
            <th>Countries</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionName)
            </td>
            <td>
                @{
                    foreach(var c in item.Countries){
                        @c.CountryID @: @c.CountryName <br />
                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RegionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RegionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
